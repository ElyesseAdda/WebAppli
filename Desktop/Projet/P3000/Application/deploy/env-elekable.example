# =============================================================================
# Configuration .env pour Elekable
# =============================================================================
# Copiez ce fichier vers .env sur le serveur /var/www/elekable/
# Remplacez les valeurs sensibles par les vraies credentials
# =============================================================================

# -----------------------------------------------------------------------------
# IDENTIFICATION
# -----------------------------------------------------------------------------
CLIENT_NAME=elekable
CLIENT_DOMAIN=elekable.fr

# -----------------------------------------------------------------------------
# DJANGO
# -----------------------------------------------------------------------------
DEBUG=False
SECRET_KEY=GENERER_UNE_NOUVELLE_CLE_AVEC_python_-c_import_secrets_print_secrets.token_urlsafe_50
ALLOWED_HOSTS=elekable.fr,www.elekable.fr

# -----------------------------------------------------------------------------
# BASE DE DONNÉES
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://p3000user:VOTRE_MOT_DE_PASSE@localhost:5432/p3000db_elekable

# -----------------------------------------------------------------------------
# AWS S3
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=VOTRE_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=VOTRE_SECRET_KEY
AWS_STORAGE_BUCKET_NAME=elekable
AWS_S3_REGION_NAME=eu-north-1
AWS_S3_CUSTOM_DOMAIN=elekable.s3.eu-north-1.amazonaws.com

# -----------------------------------------------------------------------------
# SÉCURITÉ
# -----------------------------------------------------------------------------
CSRF_TRUSTED_ORIGINS=https://elekable.fr,https://www.elekable.fr
CORS_ALLOWED_ORIGINS=https://elekable.fr,https://www.elekable.fr
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# -----------------------------------------------------------------------------
# REDIS (DB 1 pour Elekable, DB 0 est pour P3000)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# LOGS
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=/var/log/elekable/django.log

# -----------------------------------------------------------------------------
# EMAIL (optionnel)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# -----------------------------------------------------------------------------
# ONLYOFFICE (partagé - même config que P3000)
# -----------------------------------------------------------------------------
# ONLYOFFICE_SERVER_URL=http://127.0.0.1:8080
# ONLYOFFICE_JWT_SECRET=MEME_SECRET_QUE_P3000
